<%= form_for shift, remote: true, html: { class: 'form-inline mb-2' } do |f| %>
  <div class="form-group">
    <%= f.label :day %>
    <%= f.select :day, Shift.days.keys.to_a, { prompt: true }, { class: 'form-control form-control-sm mx-1' } %>
  </div>
  <div class="form-group">
    <%= f.label :starts_at %>
    <%= f.time_select :starts_at, { prompt: true, ampm: true }, { class: 'form-control form-control-sm mx-1' } %>
  </div>
  <div class="form-group">
    <%= f.label :ends_at %>
    <%= f.time_select :ends_at, { prompt: true, ampm: true }, { class: 'form-control form-control-sm mx-1' } %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-sm btn-primary', data: { disable_with: 'Creating...' } %>
  </div>
<% end %>