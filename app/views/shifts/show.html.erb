<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Shift</h2>
      <% for attribute in @shift.attributes.keys %>
        <p>
          <strong><%= attribute.humanize %>:</strong> 
          <%= @shift.attributes[attribute].to_s %>
        </p>
      <% end %>
      <%= link_to 'Shifts', shifts_path %> |
      <%= link_to 'Edit', edit_shift_path %>
    </div>
  </div>
</div>