<tr>
  <td><%= shift.day %></td>
  <td><%= shift.starts_at.strftime "%I:%M %p" %></td>
  <td><%= shift.ends_at.strftime "%I:%M %p" %></td>
  <td>
    <%= link_to 'Show', shift_path(shift) %>
    <%= link_to 'Edit', edit_shift_path(shift) %>
    <%= link_to 'Destroy', shift_path(shift), method: :delete, data: { confirm: "Are you sure??" } %>
  </td>
</tr>