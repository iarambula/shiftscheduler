<div class="container">
  <div class="col-6">
    <h2>Generate Events</h2>
    <%= form_tag events_bulk_create_path do %>
      <div class="form-group">
        <div class="input-daterange input-group" id="datepicker">
          <%= text_field :events, :starts_at, { class: "form-control" } %>
          <span class="input-group-addon">to</span>
          <%= text_field :events, :ends_at, { class: "form-control" } %>
        </div>
      </div>
      <div class="form-group">
        <%= submit_tag "Generate Events", class: "btn btn-primary", data: { disable_with: "Generating Events..." } %>
      </div>
    <% end %>
  </div>
</div>